require 'image_processing/directory_synchroniser'

host = 'nas-mef3.physiol.ox.ac.uk'
hearts = (24..29).to_a << 35

hearts.each do |heart|
  remote_dir = "NAS-MEF3/Rat/0#{heart}/MRI/DTMRI/"
  local_dir = "/Users/matthewgibb/Code/imaging/images/Rat#{heart}/MRI/DTMRI/"
  
  puts "Downloading Rat #{heart}.\n\n"
  
  sync = ImageProcessing::DirectorySynchroniser.new(host, remote_dir, local_dir)
  sync.download
end
